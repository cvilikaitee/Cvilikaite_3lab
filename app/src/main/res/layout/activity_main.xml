<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button4"
        android:layout_width="105dp"
        android:layout_height="62dp"
        android:background="@color/custom"
        android:text="%"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <Button
        android:id="@+id/ce"
        android:layout_width="105dp"
        android:layout_height="62dp"
        android:background="@color/custom"
        android:text="CE"
        app:layout_constraintStart_toEndOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <Button
        android:id="@+id/del"
        android:layout_width="105dp"
        android:layout_height="62dp"
        android:text="Del"
        android:background="@color/custom"
        app:layout_constraintStart_toEndOf="@+id/c"
        app:layout_constraintTop_toBottomOf="@+id/button9" />

    <Button
        android:id="@+id/c"
        android:layout_width="105dp"
        android:layout_height="62dp"
        android:text="C"
        android:background="@color/custom"
        app:layout_constraintStart_toEndOf="@+id/ce"
        app:layout_constraintTop_toBottomOf="@+id/button8" />

    <Button
        android:id="@+id/buttonDot"
        android:layout_width="105dp"
        android:layout_height="62dp"
        android:textColor="@color/black"
        app:backgroundTint="@color/white"
        android:background="@color/white"
        android:text="."
        app:layout_constraintStart_toEndOf="@+id/zero"
        app:layout_constraintTop_toBottomOf="@+id/three" />

    <Button
        android:id="@+id/plusMinus"
        android:layout_width="105dp"
        android:layout_height="62dp"
        android:textColor="@color/black"
        app:backgroundTint="@color/white"
        android:background="@color/white"
        android:text="±"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/one" />

    <Button
        android:id="@+id/zero"
        android:layout_width="105dp"
        android:layout_height="62dp"
        android:textColor="@color/black"
        app:backgroundTint="@color/white"
        android:background="@color/white"
        android:text="0"
        app:layout_constraintStart_toEndOf="@+id/plusMinus"
        app:layout_constraintTop_toBottomOf="@+id/two" />

    <Button
        android:id="@+id/equal"
        android:layout_width="105dp"
        android:layout_height="62dp"
        android:background="#AD5D0F6A"
        android:text="="
        app:layout_constraintStart_toEndOf="@+id/buttonDot"
        app:layout_constraintTop_toBottomOf="@+id/plus" />

    <Button
        android:id="@+id/three"
        android:layout_width="105dp"
        android:layout_height="62dp"
        android:textColor="@color/black"
        app:backgroundTint="@color/white"
        android:background="@color/white"
        android:text="3"
        app:layout_constraintStart_toEndOf="@+id/two"
        app:layout_constraintTop_toBottomOf="@+id/six" />

    <Button
        android:id="@+id/one"
        android:layout_width="105dp"
        android:layout_height="62dp"
        android:textColor="@color/black"
        app:backgroundTint="@color/white"
        android:background="@color/white"
        android:text="1"
        app:layout_constraintTop_toBottomOf="@+id/four"
        tools:layout_editor_absoluteX="-1dp" />

    <Button
        android:id="@+id/two"
        android:layout_width="105dp"
        android:layout_height="62dp"
        android:textColor="@color/black"
        app:backgroundTint="@color/white"
        android:background="@color/white"
        android:text="2"
        app:layout_constraintStart_toEndOf="@+id/one"
        app:layout_constraintTop_toBottomOf="@+id/five" />

    <Button
        android:id="@+id/plus"
        android:layout_width="105dp"
        android:layout_height="62dp"
        android:background="#AD5D0F6A"
        android:text="+"
        app:layout_constraintStart_toEndOf="@+id/three"
        app:layout_constraintTop_toBottomOf="@+id/minus" />

    <Button
        android:id="@+id/six"
        android:layout_width="105dp"
        android:layout_height="62dp"
        android:textColor="@color/black"
        app:backgroundTint="@color/white"
        android:background="@color/white"
        android:text="6"
        app:layout_constraintStart_toEndOf="@+id/five"
        app:layout_constraintTop_toBottomOf="@+id/nine" />

    <Button
        android:id="@+id/four"
        android:layout_width="105dp"
        android:layout_height="62dp"
        android:textColor="@color/black"
        app:backgroundTint="@color/white"
        android:background="@color/white"
        android:text="4"
        app:layout_constraintTop_toBottomOf="@+id/seven"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/five"
        android:layout_width="105dp"
        android:layout_height="62dp"
        android:textColor="@color/black"
        android:background="@color/white"
        app:backgroundTint="@color/white"
        android:text="5"
        app:layout_constraintStart_toEndOf="@+id/four"
        app:layout_constraintTop_toBottomOf="@+id/eight" />

    <Button
        android:id="@+id/minus"
        android:layout_width="105dp"
        android:layout_height="62dp"
        android:background="#AD5D0F6A"
        android:text="-"
        app:layout_constraintStart_toEndOf="@+id/six"
        app:layout_constraintTop_toBottomOf="@+id/mult" />

    <Button
        android:id="@+id/seven"
        android:layout_width="105dp"
        android:layout_height="62dp"
        android:textColor="@color/black"
        app:backgroundTint="@color/white"
        android:background="@color/white"
        android:text="7"
        app:layout_constraintTop_toBottomOf="@+id/button14"
        tools:layout_editor_absoluteX="-1dp"
        />

    <Button
        android:id="@+id/nine"
        android:layout_width="105dp"
        android:layout_height="62dp"
        android:textColor="@color/black"
        app:backgroundTint="@color/white"
        android:background="@color/white"
        android:text="9"
        app:layout_constraintStart_toEndOf="@+id/eight"
        app:layout_constraintTop_toBottomOf="@+id/root" />

    <Button
        android:id="@+id/mult"
        android:layout_width="105dp"
        android:layout_height="62dp"
        android:background="#AD5D0F6A"
        android:text="x"
        app:layout_constraintStart_toEndOf="@+id/nine"
        app:layout_constraintTop_toBottomOf="@+id/div" />

    <Button
        android:id="@+id/eight"
        android:layout_width="105dp"
        android:layout_height="62dp"
        android:textColor="@color/black"
        app:backgroundTint="@color/white"
        android:background="@color/white"
        android:text="8"
        app:layout_constraintStart_toEndOf="@+id/seven"
        app:layout_constraintTop_toBottomOf="@+id/button15" />

    <Button
        android:id="@+id/button15"
        android:layout_width="105dp"
        android:layout_height="62dp"
        android:background="#AD5D0F6A"
        android:text="x^2"
        app:layout_constraintStart_toEndOf="@+id/button14"
        app:layout_constraintTop_toBottomOf="@+id/ce" />

    <Button
        android:id="@+id/root"
        android:layout_width="105dp"
        android:layout_height="62dp"
        android:background="#AD5D0F6A"
        android:text="√"
        app:layout_constraintStart_toEndOf="@+id/button15"
        app:layout_constraintTop_toBottomOf="@+id/c" />

    <Button
        android:id="@+id/div"
        android:layout_width="105dp"
        android:layout_height="62dp"
        android:background="#AD5D0F6A"
        android:text="÷"
        app:layout_constraintStart_toEndOf="@+id/root"
        app:layout_constraintTop_toBottomOf="@+id/del" />

    <Button
        android:id="@+id/button14"
        android:layout_width="105dp"
        android:layout_height="62dp"
        android:background="#AD5D0F6A"
        android:text="1/x"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <Button
        android:id="@+id/button"
        android:layout_width="83dp"
        android:layout_height="46dp"
        android:textColor="@color/black"
        android:background="@color/white"
        app:backgroundTint="@color/white"
        android:text="MC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <Button
        android:id="@+id/button3"
        android:layout_width="83dp"
        android:layout_height="46dp"
        android:textColor="@color/black"
        app:backgroundTint="@color/white"
        android:background="@color/white"
        android:text="M+"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <Button
        android:id="@+id/button8"
        android:layout_width="83dp"
        android:layout_height="46dp"
        android:textColor="@color/black"
        app:backgroundTint="@color/white"
        android:background="@color/white"
        android:text="M-"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintTop_toTopOf="@+id/button3" />

    <Button
        android:id="@+id/button9"
        android:layout_width="83dp"
        android:layout_height="46dp"
        android:textColor="@color/black"
        app:backgroundTint="@color/white"
        android:background="@color/white"
        android:text="MS"
        app:layout_constraintStart_toEndOf="@+id/button8"
        app:layout_constraintTop_toTopOf="@+id/button3" />

    <Button
        android:id="@+id/button2"
        android:layout_width="83dp"
        android:layout_height="46dp"
        android:textColor="@color/black"
        app:backgroundTint="@color/white"
        android:background="@color/white"
        android:text="MR"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="409dp"
        android:layout_height="47dp"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="406dp"
        android:layout_height="42dp"
        android:gravity="center"
        android:text="Calculator"
        android:textColor="#000000"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="410dp"
        android:layout_height="39dp"
        android:gravity="left"
        android:textSize="16sp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

</androidx.constraintlayout.widget.ConstraintLayout>